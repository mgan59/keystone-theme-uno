{{!< default}}

{{!#data.post}}

  <article class="post-container post-container--single">

    <header class="post-header">
      <h1 class="post-title">Contact Form</h1>
    </header>

    <section class="{{post_class}}">
        <p>I love hearing from people, so if you want to just say hi or whatever<p>

        <form method="post">
            <input type="hidden" name="action" value="contact">
            <div class="form-group"><label>Name</label><input type="text" name="name.full" required="" class="form-control"></div>
            <div class="form-group"><label>Email</label><input type="email" name="email" required="" class="form-control"></div>
            <div class="form-group"><label>Phone</label><input type="text" name="phone" required="" placeholder="(optional)" class="form-control"></div>
            <div class="form-group"><label>What are you contacting us about?</label><select name="enquiryType" class="form-control"><option value="">(select one)</option><option value="message">Just leaving a message</option><option value="question">I've got a question</option><option value="other">Something else...</option></select>
            </div>
            <div class="form-group"><label>Message</label>
                <textarea name="message" placeholder="Leave us a message..." rows="4" class="form-control"></textarea>
            </div>
            <div class="form-actions">
                <p class="help-block">(note that others can see your enquiry in the <a href="/keystone/enquiries">admin ui</a>)</p>
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </form>
    </section>
  </article>

  {{!-- {{> comments}} --}}

{{!/post}}
